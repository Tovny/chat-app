{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "esModuleInterop": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noLib": false,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
